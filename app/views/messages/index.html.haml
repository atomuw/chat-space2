%body
  .flash-box
    .notice  新しくグループを作成しました
  .wrapper
    .chat-side
      .side-header
        %p.side-header__user-name test-user
        %ul.user-menu
          %li.user-menu__new-group
            %i.fas.fa-edit
            %a(href="#")
          %li.user-menu__edit-user
            %i.fas.fa-cog
            %a(href="#")
      .groups
        .group
          %p.group__group-name test-group
          %p.group__latest-message さようなら
        .group
          %p.group__group-name sample-group
          %p.group__latest-message hello!
        .group
          %p.group__group-name example
          %p.group__latest-message まだメッセージがありません
    .chat-main
      .main-header
        .current-group
          %h2.current-group__name test-group
          %ul.member-list
            %li.member-list__member Member：test-user
        %a(href="#")
          .main-header__edit-btn Edit
      .messages
        .message
          .upper-info
            %p.upper-info__user test-user
            %p.upper-info__date 2019/4/29(Man) 14:34:16
          %p.message__text こんにちは
        .message
          .upper-info
            %p.upper-info__user test-user
            %p.upper-info__date 2019/4/29(Man) 14:34:18
          %p.message__text さようなら
      .form
        %form.new-message#new-message
          .input-box
            %input.input-box__text#message_content(placeholder="type a message")
            %label.image-label
              %i.far.fa-image
              %input.image-label__input#message-image(type="file")
          %input.new-message__submit-btn(type="submit" value="Send")

